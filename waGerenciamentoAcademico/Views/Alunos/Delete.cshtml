@model waGerenciamentoAcademico.Models.Aluno

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>
<br />
<div>
    <h4>Aluno</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.imagem)
        </dt>
        <dd class="col-sm-10">
            <img src="/Imagens/IAlunos/@Model.nomeArquivo" class="rounded-circle" width="100" height="100" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.comprovante)
        </dt>
        <dd class="col-sm-10">
            <strong>
                <a href="/Documentos/DAlunos/@Model.nomeArquivoComprovante" target="_blank">Comprovante de Matrícula</a>
            </strong>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <div>
            <br />
            <a asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
